<script type="text/javascript">
$(document).ready(function() {
  $('#nav').scrollspy();

  var subnav = $('.subnav');

  for (var i = 0; i < subnav.length; i++) {
    $(subnav[i]).scrollspy();
  }

  var win = $(window),
      nav = $(".livingcss__nav");
  nav.length && win.on("scroll", function() {
      var win = window.window.pageYOffset;
      win > nav.position().top ? nav.addClass("livingcss__nav--fixed") : nav.removeClass("livingcss__nav--fixed")
  })
})
</script>
