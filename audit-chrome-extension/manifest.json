{
  "manifest_version": 2,

  "name": "REI Cedar Audit",
  "description": "Auditing tool for REI Cedar pattern compliance",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*.rei.com/*","https://*.rei.com/*"],
      "js": ["auditIndex.js"]
    },
    {
      "matches": ["http://*.rei.com/*","https://*.rei.com/*"],
      "css": ["lib/prism.css"],
      "js": ["lib/prism.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://*.rei.com/",
    "http://*.rei.com/"
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}
